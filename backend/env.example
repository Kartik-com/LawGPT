# Backend Environment Variables
# Copy this file to .env and update with your values

# Server Port
PORT=5000

# MongoDB Connection String
# For local MongoDB: mongodb://127.0.0.1:27017/lawyer_zen
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/lawyer_zen
MONGODB_URI=mongodb://127.0.0.1:27017/lawyer_zen

# JWT Secret - Use a strong random string in production
# Note: If using Firebase Auth, JWT_SECRET is optional but can be used for additional tokens
JWT_SECRET=replace_me_with_strong_secret_key_change_in_production

# CORS Origin - Frontend URL
# For local development: http://localhost:8080
# For production: https://your-frontend-domain.com
# For multiple origins: http://localhost:8080,https://your-frontend-domain.com
CORS_ORIGIN=http://localhost:8080

# Firebase Configuration
# Option 1: Service account JSON file path (recommended for local development)
FIREBASE_SERVICE_ACCOUNT_PATH=./config/firebase-service-account.json

# Option 2: Service account JSON as string (for cloud deployments)
# FIREBASE_SERVICE_ACCOUNT={"type":"service_account","project_id":"...","private_key":"...","client_email":"..."}

# Option 3: Individual Firebase credentials (alternative to service account)
# FIREBASE_PROJECT_ID=your-project-id
# FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\n...\n-----END PRIVATE KEY-----\n"
# FIREBASE_CLIENT_EMAIL=firebase-adminsdk-xxxxx@your-project.iam.gserviceaccount.com

# Cloudinary Configuration
# Get these from your Cloudinary dashboard: https://cloudinary.com/console
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Optional: NODE_ENV
NODE_ENV=development

